{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ES2020",
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "strict": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "target": "esnext",
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/**/*",
    "**/dist/**/*"
  ]
}
