{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "bundle": {
      "dependsOn": ["^compile","^bundle"],
      "outputs": ["dist/**"]
    },
    "compile": {
      "dependsOn": ["^compile"],
      "outputs": ["out/**"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:ci": {
      "dependsOn": ["^test:ci"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}